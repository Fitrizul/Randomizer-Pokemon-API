<!DOCTYPE html>
<html>

<head>
  <title>Pokemon</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="styles/main.css">


</head>

<body class="bg-body-tertiary">

  <div class="container my-5">
    <div class="p-5 text-center rounded-3">
      <!--Heading Section -->
      <img class="mb-5" src="images/pokemon-logo2.png" width="400" height="150" alt="logo">
      <h2 class="mx-auto fs-4">
        Get to know your own favourite Pokemon characters
      </h2>

      <!--Random Pokemon Card -->
      <div class="quotes-section">
        <div class="quote-card">

          <%if(locals.pokemon) { %>
  
            <img src=" <%= pokemon.sprites.other["official-artwork"].front_default %> " alt=" <% pokemon.name %>" loading = "lazy" class="pokemonImg mb-1">

          <% if(pokemon.id < 10) { %>
            <span class="pkmId">#000<%= pokemon.id %></span>
        <% } else if(pokemon.id >= 10 && pokemon.id < 100) { %>
            <span class="pkmId">#00<%= pokemon.id %></span>
        <% } else if(pokemon.id >= 100 && pokemon.id < 1000) { %>
            <span class="pkmId">#0<%= pokemon.id %></span>
        <% } else { %>
            <span class="pkmId">#<%= pokemon.id %></span>
        <% } %>

            <h1 class="mb-3"><%= pokemon.name.charAt(0).toUpperCase() + pokemon.name.slice(1)%></h1>
            <!--Manipulating button colour -->
            <% pokemon.types.forEach(function(types) { %>
                
                <div class="d-inline-flex ">
                <% if (types.type.name === "normal") { %>
                    <button type="button" class="type normal"><%= types.type.name %></button>
              <% } else if (types.type.name === "fire") { %>
                    <button type="button" class="type fire"><%= types.type.name %></button>
              <% } else if (types.type.name === "water") { %>
                    <button type="button" class="type water"><%= types.type.name %></button>
              <% } else if (types.type.name === "electric") { %>
                    <button type="button" class="type electric"><%= types.type.name %></button>
              <% } else if (types.type.name === "grass") { %>
                    <button type="button" class="type grass"><%= types.type.name %></button>
              <% } else if (types.type.name === "ice") { %>
                    <button type="button" class="type ice"><%= types.type.name %></button>
              <% } else if (types.type.name === "fighting") { %>
                    <button type="button" class="type fighting"><%= types.type.name %></button>
              <% } else if (types.type.name === "poison") { %>
                    <button type="button" class="type poison"><%= types.type.name %></button>
              <% } else if (types.type.name === "ground") { %>
                    <button type="button" class="type ground"><%= types.type.name %></button>
              <% } else if (types.type.name === "flying") { %>
                    <button type="button" class="type flying"><%= types.type.name %></button>
              <% } else if (types.type.name === "psychic") { %>
                    <button type="button" class="type psychic"><%= types.type.name %></button>
              <% } else if (types.type.name === "bug") { %>
                    <button type="button" class="type bug"><%= types.type.name %></button>
              <% } else if (types.type.name === "rock") { %>
                    <button type="button" class="type rock"><%= types.type.name %></button>
              <% } else if (types.type.name === "ghost") { %>
                    <button type="button" class="type ghost"><%= types.type.name %></button>
              <% } else if (types.type.name === "dragon") { %>
                    <button type="button" class="type dragon"><%= types.type.name %></button>
              <% } else if (types.type.name === "dark") { %>
                    <button type="button" class="type dark"><%= types.type.name %></button>
              <% } else if (types.type.name === "steel") { %>
                    <button type="button" class="type steel"><%= types.type.name %></button>
              <% } else if (types.type.name === "fairy") { %>
                    <button type="button" class="type fairy"><%= types.type.name %></button>
              <% } %>
                </div>

            <% }); %>

          <% } else{ %>
            <p class="quote-text" id="quote">Loading...</p>
            <p class="quote-author" id="quoteAuthor">-</p>
          <%   } %>

        </div>
        <!--Make request to PokeAPI -->
        <form action="/random" method="POST">
          <input type="submit" class="btn1" value="Check It Out!">
        </form>
      </div>

      <!--<div class="d-inline-flex gap-2 mb-5"> -->
        
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
          integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" 
          crossorigin="anonymous">
  </script>
  
  
</body>

</html>